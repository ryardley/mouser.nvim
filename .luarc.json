{
  "runtime.version": "LuaJIT",
  "runtime.path": ["?.lua", "?/init.lua"],
  "diagnostics": {
    "globals": ["vim"]
  },
  "workspace": {
    "checkThirdParty": false,
    "library": ["$VIMRUNTIME/lua", "./lua"]
  },
  "format": {
    "enable": true,
    "defaultConfig": {
      "indent_style": "space",
      "indent_size": "2",
      "insert_final_newline": "true",
      "trim_trailing_whitespace": "true"
    }
  }
}
